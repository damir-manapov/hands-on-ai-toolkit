# Set secrets via environment variables:
# export TF_VAR_selectel_domain="123456"
# export TF_VAR_selectel_username="your-username"
# export TF_VAR_selectel_password="your-password"
# export TF_VAR_selectel_openstack_password="your-openstack-password"
# Optional auth for AI Toolkit UI:
# export TF_VAR_ai_toolkit_auth="super-secure-token"

environment_name = "ai-toolkit"

region            = "ru-7"
availability_zone = "ru-7b"

ssh_public_key_path = "~/.ssh/id_ed25519.pub"

cpu_count    = 8
ram_gb       = 32
disk_size_gb = 200
disk_type    = "fast"

# Lock down access in production
allowed_ssh_cidr = "0.0.0.0/0"
allowed_ui_cidr  = "0.0.0.0/0"
